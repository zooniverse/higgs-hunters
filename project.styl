@keyframes subject-viewer-loading
  0%
    background-position: 0 0

  100%
    background-position: 80px 0

#readymade
  .readymade-subject-viewer
    background: black

    &[data-loading]
      animation: 750ms subject-viewer-loading linear infinite
      background: linear-gradient(left top, black 25%, rgba(black, 0.7) 25%, rgba(black, 0.7) 50%, black 50%, black 75%, rgba(black, 0.7) 75%)
      background-size: 40px 40px

  .marking-surface-tool-controls
    max-width: 300px
    min-width: 25px // This just makes a little space for "something weird" marks.
    text-align: center

    .decision-tree-choice
      display: inline-block
      width: 80px

  .video-embed
    display: block
    margin: 0 auto

  figure
    margin: 0
    text-align: center

    figcaption
      font-size: 0.8em
      font-weight: bold

  .sub-pages
    text-align: center

  .readymade-field-guide img
    width: 100%

  .readymade-mini-tutorial-image[src=""]
    display: none
